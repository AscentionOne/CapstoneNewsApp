<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/titleTextView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/article_title_1"
        app:layout_constraintBottom_toTopOf="@+id/titleTextView2"
        app:layout_constraintStart_toStartOf="@+id/titleTextView2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/titleTextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/article_title_2"
        app:layout_constraintBottom_toTopOf="@+id/titleTextView3"
        app:layout_constraintStart_toStartOf="@+id/titleTextView3"
        app:layout_constraintTop_toBottomOf="@+id/titleTextView1" />

    <TextView
        android:id="@+id/titleTextView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/article_title_3"
        app:layout_constraintBottom_toTopOf="@+id/titleTextView4"
        app:layout_constraintStart_toStartOf="@+id/titleTextView4"
        app:layout_constraintTop_toBottomOf="@+id/titleTextView2" />

    <TextView
        android:id="@+id/titleTextView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/article_title_4"
        app:layout_constraintBottom_toTopOf="@+id/titleTextView5"
        app:layout_constraintStart_toStartOf="@+id/titleTextView5"
        app:layout_constraintTop_toBottomOf="@+id/titleTextView3" />

    <TextView
        android:id="@+id/titleTextView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/article_title_5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleTextView4" />
</androidx.constraintlayout.widget.ConstraintLayout>
